# Server Environment Variables
NODE_ENV=development
PORT=5000

# Database
DATABASE_URL=postgres://quoteforge:quoteforge_secret@localhost:5432/quoteforge
DB_HOST=localhost
DB_PORT=5432
DB_NAME=quoteforge
DB_USER=quoteforge
DB_PASSWORD=quoteforge_secret

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=30m
JWT_REFRESH_EXPIRES_IN=7d

# App Settings
BASE_CURRENCY=FJD
VAT_RATE=0.125
QUOTE_VALIDITY_DAYS=14

# FX Rate API (frankfurter.app - free, no key needed)
FX_API_URL=https://api.frankfurter.app
FX_STALE_HOURS=240

# Email (SMTP Configuration)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@kastel.local
SMTP_PASS=your-smtp-password
SMTP_FROM=QuoteForge <noreply@kastel.local>

# Frontend URL (for CORS and password reset links)
FRONTEND_URL=http://localhost:3000
